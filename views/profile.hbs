<script>
    $(document).ready(function () {
        $("#gender").val('{{gender}}');
        $("#year").val({{ year }});
        $("#day").val({{ day }});
        $("#month").val('{{month}}');
    });
    let thirty = ["September", "April", "June", "November"];
    let thirtyOne = ["January", "March", "May", "July", "August", "October", "December"];
    function checkDays() {
        if (thirty.includes($("#month").val())) {
            $("#31").addClass("d-none");
            $("#30").removeClass("d-none");
        } else if (thirtyOne.includes($("#month").val())) {
            $("#31").removeClass("d-none");
            $("#30").removeClass("d-none");
        } else {
            $("#31").addClass("d-none");
            $("#30").addClass("d-none");
        }
    }
</script>


